# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           			controllers.HomeController.index()

GET 	/users/register/						controllers.HomeController.reg(Users)
PUT		/users/$userId/information				controllers.HomeController.upd(user)
POST	/users/$userId/login					controllers.HomeController.inlog(email,password)
DELETE	/users/$userId/login					controllers.HomeController.inlog(email,password)
POST	/users/$userId/order/$orderId			controllers.HomeController.placeorder(Users,order)
GET		/users/$userId/order/$orderId/history	controllers.HomeController.retrieveorder(history)
GET		/users/$userId/order/$orderId			controllers.HomeController.retrievedetails(order)
DELETE	/users/$userId/order/$orderId			controllers.HomeController.placeorder(order)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
