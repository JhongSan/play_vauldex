# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index()

GET		/taskList1						controllers.MyController.taskList
GET		/products						controllers.MyController.product(prodName, prodNum: Int)
GET		/products/:prodName/:prodNum	controllers.MyController.product(prodName, prodNum: Int)
GET		/login							controllers.MyController.login
GET		/validateGet1					controllers.MyController.validateLoginGet(username, password)
POST	/validatePost1					controllers.MyController.validateLoginPost
POST 	/createUser1					controllers.MyController.createUser 
GET 	/logout1						controllers.MyController.logout
POST 	/addTask1						controllers.MyController.addTask
POST 	/deleteTask1					controllers.MyController.deleteTask
POST	/validateForm1					controllers.MyController.validateLoginForm


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
